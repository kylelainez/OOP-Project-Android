<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/surf_map_button"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/info_card"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/surf_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/surf_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surf_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="SURF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/surf_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surf_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/surf_icon"
        app:layout_constraintTop_toBottomOf="@+id/surf_text" />


</androidx.constraintlayout.widget.ConstraintLayout>